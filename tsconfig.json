{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2017"
    },
    "include": [
        "src/**/*"
    ]
}
